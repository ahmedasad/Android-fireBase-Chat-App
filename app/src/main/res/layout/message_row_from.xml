<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/msgListViewRight"

                                                   tools:layout_editor_absoluteY="26dp"
                                                   android:paddingRight="10dp" android:layout_marginTop="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:id="@+id/msgUserImageFrom" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/chatapplogo"
            app:civ_border_width="1dp"
            app:civ_border_color="#F0D1D1"
            android:contentDescription=""
            tools:visibility="visible" android:visibility="visible"
            android:background="#00AC6060"
            android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgTxtBodyFrom"
            android:background="@drawable/card_rounded_messages"
            android:textColor="#000000"
            android:maxWidth="243dp"
            android:paddingLeft="9dp" android:paddingRight="9dp"
            android:textIsSelectable="true" android:textDirection="ltr"
            app:layout_constraintBottom_toBottomOf="@+id/msgUserImageFrom"
            app:layout_constraintTop_toTopOf="@+id/msgUserImageFrom"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content "
            android:layout_marginBottom="8dp"
            app:layout_constraintStart_toEndOf="@+id/msgUserImageFrom" android:layout_marginStart="8dp"
            app:layout_constraintHorizontal_bias="0.0"/>

</androidx.constraintlayout.widget.ConstraintLayout>