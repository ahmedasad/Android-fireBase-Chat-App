<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                                   xmlns:tools="http://schemas.android.com/tools"
                                                   android:layout_width="match_parent"
                                                   android:layout_height="wrap_content"
                                                   android:id="@+id/msgListViewRight"

                                                   tools:layout_editor_absoluteY="26dp"
                                                   android:paddingRight="10dp" android:layout_marginTop="5dp">
    <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"

            android:id="@+id/msgUserImageTo" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"

            android:src="@drawable/chatapplogo"
            app:civ_border_width="1dp"
            app:civ_border_color="#F0D1D1"
            android:contentDescription=""
            tools:visibility="visible" android:visibility="visible"
            android:background="#00AC6060"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintVertical_bias="0.0"
            android:layout_marginEnd="16dp"/>
    <TextView
            android:text="wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content wrap content "
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgtxtBodyTo"
            android:textColor="@android:color/black"
            android:background="@drawable/card_rounded_messages" android:textAlignment="viewStart"
            android:maxWidth="243dp"
            android:paddingLeft="9dp" android:paddingRight="9dp"
            android:textIsSelectable="true" android:textDirection="ltr"
            app:layout_constraintEnd_toStartOf="@+id/msgUserImageTo"
            app:layout_constraintBottom_toBottomOf="@+id/msgUserImageTo"
            app:layout_constraintTop_toTopOf="@+id/msgUserImageTo" app:layout_constraintVertical_bias="0.468"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="1.0" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/msgtxtTimeTo"
            app:layout_constraintTop_toTopOf="@+id/msgtxtBodyTo"
            app:layout_constraintBottom_toBottomOf="@+id/msgtxtBodyTo"
            app:layout_constraintEnd_toStartOf="@+id/msgtxtBodyTo" android:layout_marginEnd="16dp"
    />

</androidx.constraintlayout.widget.ConstraintLayout>